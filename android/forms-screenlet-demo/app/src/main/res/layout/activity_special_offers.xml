<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.liferay.mobile.formsscreenletdemo.view.sessions.SpecialOffersActivity"
	>

	<android.support.v7.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:elevation="@dimen/toolbar_elevation"
		android:title="@string/insurances"
		android:titleTextColor="@color/toolbar_text_color"
		>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="@dimen/toolbar_title_margin_left"
			android:text="@string/special_offers"
			android:textSize="@dimen/toolbar_title_text_size"
			/>

	</android.support.v7.widget.Toolbar>

	<com.liferay.mobile.screens.webcontent.display.WebContentDisplayScreenlet
		android:id="@+id/web_content_display_screenlet"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:groupId="20126"
		app:articleId="37330"
		/>

</LinearLayout>
