<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.liferay.mobile.formsscreenletdemo.view.MyPoliciesActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_policies_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/toolbar_elevation"
        android:background="@color/white"
        app:title="@string/my_policies"
        app:titleTextColor="@color/toolbar_text_color"/>

    <com.liferay.mobile.screens.asset.list.AssetListScreenlet
        android:id="@+id/my_policies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:portletItemName="policiesfilter"
        />

</LinearLayout>