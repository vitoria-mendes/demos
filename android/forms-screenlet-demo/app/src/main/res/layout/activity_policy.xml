<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.liferay.mobile.formsscreenletdemo.view.PolicyActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_policy_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/toolbar_elevation"
        android:background="@color/white"
        app:titleTextColor="@color/toolbar_text_color"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.liferay.mobile.screens.asset.display.AssetDisplayScreenlet
                android:id="@+id/my_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </ScrollView>

    </FrameLayout>

</LinearLayout>